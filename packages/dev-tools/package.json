    "lodash": "^4.17.15",
    "npm-linker": "^1.0.13",
    "rimraf": "^3.0.2",
    "sade": "^1.7.3",
    "semver": "^7.3.2",
    "ts-jest": "^25.5.1",
    "tslib": "^1.13.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@mvila/tsconfig": "^1.0.4",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.155",
