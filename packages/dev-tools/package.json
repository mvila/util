    "link": "npm-linker",
    "prepare": "npm run build"
  },
  "dependencies": {
    "jest": "^25.4.0",
    "jest-watch-typeahead": "^0.5.0",
    "npm-linker": "^1.0.11",
    "rimraf": "^3.0.2",
    "sade": "^1.7.3",
    "ts-jest": "^25.4.0",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@mvila/tsconfig": "^1.0.4",
    "@types/node": "^13.13.4",
    "@types/rimraf": "^3.0.0",
    "@types/sade": "^1.6.0"
  }
}
